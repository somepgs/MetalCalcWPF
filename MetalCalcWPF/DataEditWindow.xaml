<Window x:Class="MetalCalcWPF.DataEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор Базы Данных (Панель Технолога)" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="⚠️ Будьте осторожны! Изменения влияют на все будущие расчеты." 
                   Foreground="Red" FontWeight="Bold" Margin="0,0,0,10"/>

        <TabControl Grid.Row="1">

            <TabItem Header="🏗️ Материалы">
                <DataGrid x:Name="MaterialsGrid" AutoGenerateColumns="False" CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Плотность (г/см3)" Binding="{Binding Density}" Width="120"/>
                        <DataGridTextColumn Header="Базовая цена (тг/кг)" Binding="{Binding BasePricePerKg}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="🔥 Лазер (Профили)">
                <DataGrid x:Name="LaserGrid" AutoGenerateColumns="False" CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Толщина" Binding="{Binding Thickness}" Width="80"/>
                        <DataGridTextColumn Header="Газ" Binding="{Binding GasType}" Width="80"/>
                        <DataGridTextColumn Header="Скорость (м/мин)" Binding="{Binding CuttingSpeed}" Width="120"/>
                        <DataGridTextColumn Header="Цена пробивки" Binding="{Binding PiercePrice}" Width="100"/>
                        <DataGridTextColumn Header="Коэфф. Наценки" Binding="{Binding MarkupCoefficient}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="📐 Гибка (Цены)">
                <DataGrid x:Name="BendingGrid" AutoGenerateColumns="False" CanUserAddRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Толщина" Binding="{Binding Thickness}" Width="70"/>
                        <DataGridTextColumn Header="Матрица V" Binding="{Binding V_Die}" Width="80"/>
                        <DataGridTextColumn Header="Мин. полка" Binding="{Binding MinFlange}" Width="80"/>

                        <DataGridTextColumn Header="Цена (<1.5м)" Binding="{Binding PriceLen1500}" Width="100"/>
                        <DataGridTextColumn Header="Цена (<3м)" Binding="{Binding PriceLen3000}" Width="100"/>
                        <DataGridTextColumn Header="Цена (<6м)" Binding="{Binding PriceLen6000}" Width="100"/>

                        <DataGridTextColumn Header="Наладка" Binding="{Binding SetupPrice}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

        </TabControl>

        <Button Grid.Row="2" Content="💾 Сохранить изменения в Базе" Height="40" 
                Click="Save_Click" Background="#FFDDDDDD" FontWeight="Bold" Margin="0,10,0,0"/>
    </Grid>
</Window>