<Window x:Class="MetalCalcWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки цеха" Height="600" Width="500" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">

            <TabItem Header="💰 Экономика">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Лазерный участок" Margin="0,0,0,10" Padding="5">
                            <StackPanel>
                                <TextBlock Text="Оклад оператора (тг):"/>
                                <TextBox x:Name="SalaryBox" Margin="0,2,0,5"/>
                                <TextBlock Text="График (Дней / Часов):"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="DaysBox" Width="50" Margin="0,0,5,0"/>
                                    <TextBox x:Name="HoursBox" Width="50"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Гибочный участок" Margin="0,0,0,10" Padding="5">
                            <StackPanel>
                                <TextBlock Text="Оклад оператора (тг):"/>
                                <TextBox x:Name="BendSalaryBox" Margin="0,2,0,5"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Расходы цеха" Padding="5">
                            <StackPanel>
                                <TextBlock Text="Электричество (тг/кВт):"/>
                                <TextBox x:Name="ElectricityBox" Margin="0,2,0,5"/>
                                <TextBlock Text="Амортизация (тг/час):"/>
                                <TextBox x:Name="AmortizationBox" Margin="0,2,0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="🏗️ Материалы">
                <StackPanel Margin="10">
                    <GroupBox Header="Торговая наценка" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Наценка на металл (%):"/>
                            <TextBox x:Name="MaterialMarkupBox" Margin="0,5,0,5" FontWeight="Bold"/>
                            <TextBlock Text="Пример: Если закуп 355 тг, а наценка 30%, продаем по 461 тг." 
                                       FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>

                    <TextBlock Text="* Редактирование базовых цен металлов будет доступно в следующей версии." 
                               Foreground="Gray" Margin="0,20,0,0" TextAlignment="Center"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="⚙️ Технология">
                <StackPanel Margin="10">
                    <GroupBox Header="Коэффициенты сложности" Padding="5">
                        <StackPanel>
                            <TextBlock Text="Порог 'Тяжелого' металла (мм):"/>
                            <TextBox x:Name="ThresholdBox" Margin="0,2,0,5"/>
                            <TextBlock Text="Доплата за тяжесть (тг/дет):"/>
                            <TextBox x:Name="HeavyCostBox" Margin="0,2,0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Сварка" Padding="5" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Стоимость сварки (тг/см):"/>
                            <TextBox x:Name="WeldCostBox" Margin="0,2,0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>

        </TabControl>

        <Button Grid.Row="1" Content="💾 Сохранить настройки" Height="40" Click="Save_Click" 
                Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,10,0,0"/>
    </Grid>
</Window>