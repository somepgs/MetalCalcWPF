<Window x:Class="MetalCalcWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки цеха" Height="550" Width="450" WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">

            <GroupBox Header="👷 Зарплата и График" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <TextBlock Text="Оклад оператора (в месяц, ₸):"/>
                    <TextBox x:Name="SalaryBox" Margin="0,5,0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Дней в месяц:"/>
                            <TextBox x:Name="DaysBox" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Часов в смену:"/>
                            <TextBox x:Name="HoursBox" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="🔨 Сложность и Обработка" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <TextBlock Text="Порог толщины для 'Тяжелой' детали (мм):"/>
                    <TextBox x:Name="ThresholdBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Наценка за сложность (₸ за деталь):"/>
                    <TextBox x:Name="HeavyCostBox" Margin="0,5,0,0"/>
                    <TextBlock Text="(Применяется, если толщина > порога)" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="⚡ Расходы и Оборудование" Margin="0,0,0,15" Padding="10">
                <StackPanel>
                    <TextBlock Text="Цена электроэнергии (₸ за кВт):"/>
                    <TextBox x:Name="ElectricityBox" Margin="0,5,0,10"/>

                    <TextBlock Text="Амортизация и расходники (₸ в час):"/>
                    <TextBox x:Name="AmortizationBox" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <Button Content="💾 Сохранить настройки" Height="40" Click="Save_Click" Background="#DDDDDD"/>
        </StackPanel>
    </ScrollViewer>
</Window>