<Window x:Class="MetalCalcWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetalCalcWPF"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Стоимость лазерной резки (за 1 м * мм):" />
            <TextBox x:Name="LaserPriceBox" Text="200" Margin="0,5,0,15" />

            <TextBlock Text="Стоимость гибки (за 1 гиб):" />
            <TextBox x:Name="BendPriceBox" Text="50" Margin="0,5,0,15" />

            <Button Content="Сохранить" Click="Save_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
