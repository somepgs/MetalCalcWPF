<Window x:Class="MetalCalcWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetalCalcWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button Content="⚙ Настройки цен" Width="120" HorizontalAlignment="Right" Click="Settings_Click" Margin="0,0,0,20"/>
            <TextBlock Text="Длина контура детали (метров):" FontSize="14"/>
            <TextBox x:Name="LengthBox" Height="30" Margin="0,5,0,15"/>

            <TextBlock Text="Толщина металла (мм):" FontSize="14"/>
            <TextBox x:Name="ThicknessBox" Height="30" Margin="0,5,0,15"/>

            <Button x:Name="CalcButton" Content="Рассчитать стоимость" Height="40" Click="Button_Click"/>

            <TextBlock x:Name="ResultLabel" Text="Итого: 0 ₸" FontSize="24" FontWeight="Bold" Margin="0,20,0,0" Foreground="LightGreen"/>
        </StackPanel>
    </Grid>
</Window>
